<div id="mainbody">
	<%= form_tag(posts_path, :method => "get", id: "home-search-form") do %>
		<span class="home-input-append">
		    <%= text_field_tag :search, params[:search], id: "home-search-bar", placeholder: "What are you looking for?", autofocus: true %><button type="submit" id="home-search-button">Search</button>
		</span>
	<% end %>
	<% if user_signed_in? %>
		<%= link_to 'Find Stuff', posts_path, :class => 'button' %>
		<%= link_to 'List Something', new_post_path, :class => 'button' %>
	<% else %>
		<%= link_to('Sharing makes the world a better place', new_user_registration_path, :id => 'signup', :class=> 'button')  %>
		<%= link_to('Already a member? Login', new_user_session_path, :id => 'login')  %> 
	<% end %>
	<%= link_to posts_path(category: 1) do
      image_tag('clothes.jpg', id:"filter_clothes",)
  	end %>
  	 <%= "Apparel & Accessories" %>
</div>