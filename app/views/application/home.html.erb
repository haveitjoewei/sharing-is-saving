      	<%= link_to posts_path(category: 7) do
            image_tag('car.png', id:"filter_vehicles",)
        	end %>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-4 rm-padding-sm col-md-12">
        <%= link_to "Spaces & Venues", posts_path(category: 10), :class=>"tile-text"%>
      	<%= link_to posts_path(category: 10) do
            image_tag('space.jpg', id:"filter_space",)
        	end %>
      </div>
      <div class="col-lg-4 rm-padding-sm col-md-12">
        <%= link_to "Sports & Outdoors", posts_path(category: 11), :class=>"tile-text"%>
      	<%= link_to posts_path(category: 11) do
            image_tag('outdoor.png', id:"filter_outdoors",)
        	end %>
      </div>
      <div class="col-lg-4 rm-padding-sm col-md-12">
        <%= link_to "Tools & Gardening", posts_path(category: 12), :class=>"tile-text"%>
      	<%= link_to posts_path(category: 12) do
            image_tag('tools.png', id:"filter_tools",)
      	  end %>
      </div>
    </div>
  </div>

</div>