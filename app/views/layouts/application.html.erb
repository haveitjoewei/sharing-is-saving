						<div id="notification_li">
							<!-- <span id="notification_count">3</span> -->
							<div id="notificationContainer">
								<div id="notificationTitle">Notifications</div>
									<div id="notificationsBody" class="notifications">
										<ul class="list-group">

											<% @allActivities.each_with_index do |activity, index| %>

												<% if activity.owner_id == current_user.id %>
													<% if activity.key == 'exchange.create_exchange' %>
														<li class="list-group-item"><%= @allRecipientsN[index].first_name %> requested to borrow your item <%= @allPostsN[index].title %>.</li>

													<% elsif activity.key == 'exchange.exchange_completed' %>
														<li class="list-group-item"><%= @allRecipientsN[index].first_name %> has returned your item <%= @allPostsN[index].title %>.</li>

													<% elsif activity.key == 'exchange.update_status' %>
														<% if activity.parameters[:to_status] == 5 %>
															<li class="list-group-item">You declined <%= @allRecipientsN[index].first_name %>'s request to rent <%= @allPostsN[index].title %>.</li>
														<% end %>
													<% end %>

												<% elsif activity.recipient_id == current_user.id %>

													<% if activity.key == 'exchange.update_status' %>

														<% if activity.parameters[:to_status] == 2 %>
															<li class="list-group-item">You are now renting <%= @allOwnersN[index].first_name %>'s <%= @allPostsN[index].title %>.</li>

														<% elsif activity.parameters[:to_status] == 5 %>
															<li class="list-group-item">Your request to rent <%= @allOwnersN[index].first_name %>'s <%= @allPostsN[index].title %> was cancelled.</li>

														<% elsif activity.parameters[:to_status] == 3 %>
															<li class="list-group-item">Your request to rent <%= @allOwnersN[index].first_name %>'s <%= @allPostsN[index].title %> was rejected.</li>
														<% end %>

													<% elsif activity.key == 'exchange.exchange_completed' %>
														<li class="list-group-item">You have returned <%= @allOwnersN[index].first_name %>'s item <%= @allPostsN[index].title %>.</li>

													<% end %>

												<% end %>

											<% end %>

										</ul>
									</div>
